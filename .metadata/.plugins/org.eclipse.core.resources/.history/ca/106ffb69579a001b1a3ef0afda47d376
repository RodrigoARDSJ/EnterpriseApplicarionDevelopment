package br.com.fiap.tds.entity;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.EnumType;
import javax.persistence.Enumerated;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.SequenceGenerator;
import javax.persistence.Table;

@Entity
@Table(name = "TB_PAGAMENTO")
@SequenceGenerator(allocationSize = 1, name = "pagamento", sequenceName = "SQ_TB_PAGAMENTO")
public class Pagamento {
	
	@Id
	@GeneratedValue(strategy = GenerationType.SEQUENCE, generator = "pagamento")
	@Column(name = "cd_pagamento", nullable = false)
	private int codigo;
	
	@Column(name = "cd_cliente", nullable = false)
	private int codigoCliente;
	
	@Column(name = "nr_cartao", nullable = false)
	private int cartão;
	
	@Enumerated(EnumType.STRING)
	@Column(name = "ds_metodo", nullable = false)
	private Metodo metodo;

	public Pagamento(int codigo, int cartão, Metodo metodo) {
		super();
		this.codigo = codigo;
		this.cartão = cartão;
		this.metodo = metodo;
	}

	public Pagamento(int cartão, Metodo metodo) {
		super();
		this.cartão = cartão;
		this.metodo = metodo;
	}

	public Pagamento() {
	}

	public int getCodigo() {
		return codigo;
	}

	public void setCodigo(int codigo) {
		this.codigo = codigo;
	}

	public int getCodigoCliente() {
		return codigoCliente;
	}

	public void setCodigoCliente(int codigoCliente) {
		this.codigoCliente = codigoCliente;
	}

	public int getCartão() {
		return cartão;
	}

	public void setCartão(int cartão) {
		this.cartão = cartão;
	}

	public Metodo getMetodo() {
		return metodo;
	}

	public void setMetodo(Metodo metodo) {
		this.metodo = metodo;
	}

}
